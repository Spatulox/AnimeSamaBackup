{
  "manifest_version": 2,
  "name": "Anime-sama Sync",
  "description": "Synchronise les donn√©es locales entre anime-sama.eu, .si, .fr, etc.",
  "version": "1.0.0",

  "icons": {
    "16": "common/icons/icon16.png",
    "48": "common/icons/icon48.png",
    "128": "common/icons/icon128.png"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "MuteAds@MuteAds",
      "strict_min_version": "109.0"
    }
  },

  "permissions": [
    "tabs",
    "*://*.anime-sama.si/*"
  ],

  "content_scripts": [
    {
      "matches": ["*://*.anime-sama.si/*"],
      "js": ["dist/content.js"],
      "run_at": "document_end"
    }
  ],

  "browser_action": {
    "default_title": "Anime-sama Sync",
    "default_popup": "common/html/popup.html"
  },

  "web_accessible_resources": [
    "common/html/popup-sync.html",
    "common/css/style-popup.css"
  ]
}